<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vazio"
        android:layout_alignParentRight="true"
        android:textSize="45px"/>

    <TextView
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vazio"
        android:layout_alignParentRight="true"
        android:text=""
        android:textSize="35px" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:layout_alignParentRight="true"
        android:textSize="55px"
        android:id="@+id/entrada"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="40px"
        android:onClick="AddNumero"
        android:layout_below="@id/entrada"
        android:layout_alignParentLeft="true"
        android:id="@+id/num7"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="40px"
        android:onClick="AddNumero"
        android:layout_below="@id/num7"
        android:layout_alignParentLeft="true"
        android:id="@+id/num4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="40px"
        android:onClick="AddNumero"
        android:layout_below="@id/num4"
        android:layout_alignParentLeft="true"
        android:id="@+id/num1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="40px"
        android:onClick="AddNumero"
        android:layout_below="@id/entrada"
        android:layout_toRightOf="@id/num7"
        android:id="@+id/num8"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="40px"
        android:onClick="AddNumero"
        android:layout_below="@id/num8"
        android:layout_toRightOf="@id/num4"
        android:id="@+id/num5"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="40px"
        android:layout_below="@id/num5"
        android:onClick="AddNumero"
        android:layout_toRightOf="@id/num1"
        android:id="@+id/num2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="40px"
        android:layout_below="@id/entrada"
        android:onClick="AddNumero"
        android:layout_toRightOf="@id/num8"
        android:id="@+id/num9"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="40px"
        android:onClick="AddNumero"
        android:layout_below="@id/num9"
        android:layout_toRightOf="@id/num5"
        android:id="@+id/num6"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="40px"
        android:onClick="AddNumero"
        android:layout_below="@id/num6"
        android:layout_toRightOf="@id/num2"
        android:id="@+id/num3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="40px"
        android:layout_below="@id/entrada"
        android:layout_toRightOf="@id/num9"
        android:id="@+id/adic"
        android:onClick="adic"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40px"
        android:layout_below="@id/adic"
        android:layout_toRightOf="@id/num6"
        android:id="@+id/sub"
        android:onClick="sub"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:textSize="40px"
        android:layout_below="@id/sub"
        android:layout_toRightOf="@id/num3"
        android:id="@+id/multi"
        android:onClick="multi"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="40px"
        android:layout_below="@id/multi"
        android:layout_toRightOf="@id/num3"
        android:id="@+id/div"
        android:onClick="div"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cos"
        android:textSize="40px"
        android:layout_below="@id/div"
        android:layout_toRightOf="@id/num3"
        android:id="@+id/cos"
        android:onClick="cos"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:textSize="40px"
        android:layout_below="@id/cos"
        android:layout_toRightOf="@id/num3"
        android:onClick="clear"
        android:id="@+id/clear"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+/-"
        android:textSize="40px"
        android:layout_below="@id/cos"
        android:layout_toLeftOf="@id/clear"
        android:id="@+id/negativo"
        android:onClick="negative"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:textSize="40px"
        android:layout_below="@id/cos"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/negativo"
        android:onClick="enviar"
        android:id="@+id/enviar"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="."
        android:textSize="40px"
        android:layout_below="@id/num1"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/enviar"
        android:id="@+id/ponto"
        android:onClick="ponto"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="40px"
        android:layout_below="@id/num2"
        android:layout_toRightOf="@id/ponto"
        android:layout_above="@id/enviar"
        android:onClick="AddNumero"
        android:id="@+id/num0"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="="
        android:textSize="40px"
        android:layout_below="@id/num3"
        android:layout_toRightOf="@id/num0"
        android:onClick="igualdade"
        android:layout_above="@id/enviar"
        android:id="@+id/igual"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:textSize="40px"
        android:layout_below="@id/tangente"
        android:onClick="porcent"
        android:layout_toRightOf="@id/potencia"

        android:id="@+id/porcento"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y^"
        android:textSize="40px"
        android:onClick="pontencia"
        android:layout_below="@id/tangente"
        android:layout_alignParentLeft="true"
        android:id="@+id/potencia"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x!"
        android:textSize="40px"
        android:layout_below="@id/clear"
        android:layout_toRightOf="@id/seno"
        android:onClick="fatorial"
        android:id="@+id/fatorial"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sin"
        android:textSize="40px"
        android:layout_below="@id/negativo"
        android:layout_toRightOf="@id/tangente"
        android:id="@+id/seno"
        android:onClick="seno"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tan"
        android:textSize="40px"
        android:layout_below="@id/enviar"
        android:layout_toRightOf="@id/raiz"
        android:id="@+id/tangente"
        android:onClick="tangente"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âˆš"
        android:textSize="40px"
        android:layout_below="@id/enviar"
        android:layout_alignParentLeft="true"
        android:onClick="raiz"
        android:id="@+id/raiz"/>
</RelativeLayout>
